    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add_task_bg" > 
    <Button
        android:id="@+id/back_button"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
